<li class="dropdown" id="registerDropdown">
    <button id="button-dropdown-toggle-register-form" type="button" class="dropdown-toggle navbar-btn btn btn-sm btn-info c-blue-dark" data-toggle="dropdown">{{ 'front.home.register' | trans }}</button>
    <ul class="dropdown-menu df-dropdown-login-menu">
        <li>
            <div class="row no-m-bottom">
                <div class="col-md-12">
                    <form class="form" role="form" method="POST" accept-charset="UTF-8" id="register-nav" {{ form_enctype(form) }}>
                        {{ form_errors(form) }}
                        <div class="form-group{% if not form.username.vars.valid %} has-error{% endif %}">
                            {{ form_label(form.username,null, {'label_attr':{'class':'sr-only'}}) }}
                            {{ form_widget(form.username, {'attr': {'placeholder': 'form.label.username'|trans}}) }}
                            {{ form_errors(form.username) }}
                        </div>
                        <div class="form-group{% if not form.email.vars.valid %} has-error{% endif %}">
                            {{ form_label(form.email,null, {'label_attr':{'class':'sr-only'}}) }}
                            {{ form_widget(form.email, {'attr': {'placeholder': 'form.label.email'|trans}}) }}
                            {{ form_errors(form.email) }}
                        </div>
                        <div class="form-group{% if not form.plainPassword.vars.valid %} has-error{% endif %}">
                            {{ form_label(form.plainPassword.first,null, {'label_attr':{'class':'sr-only'}}) }}
                            {{ form_widget(form.plainPassword.first, {'attr': {'placeholder': 'form.label.passwordFirst'|trans}}) }}
                            {{ form_errors(form.plainPassword.first) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.plainPassword.second,null, {'label_attr':{'class':'sr-only'}}) }}
                            {{ form_widget(form.plainPassword.second, {'attr': {'placeholder': 'form.label.passwordSecond'|trans}}) }}
                            {{ form_errors(form.plainPassword.second) }}
                        </div>
                        <div class="form-group">
                                <div class="checkbox">
                                    <label>
                                        <input type="checkbox" value="1" name="declaracion" id="declaracion" required="required">
                                        Accepto les <a style="padding:0" href="{{ path('demofony2_front_privacy') }}">condicions d'ús</a> i he llegit <a style="padding:0" href="{{ path('demofony2_front_privacy') }}">l'avís legal</a>
                                    </label>
                                </div>
                        </div>
                        {{ form_widget(form._token) }}
                        <div class="form-group no-m-bottom">
                            <input type="submit" class="btn btn-sm btn-primary" value="{{ 'form.label.register' | trans }}"/>
                        </div>
                    </form>
                </div>
            </div>
        </li>
    </ul>
</li>
{% if not form.vars.valid %}
    <script type="text/javascript">
        jQuery(document).ready(function() {
            jQuery('#button-dropdown-toggle-register-form').dropdown('toggle');
        });
    </script>
{% endif %}
